{
    "extends": "./tsconfig.base.json",
    "include": ["src/**/*.ts"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "incremental": true,
        "esModuleInterop": true,
        "types": ["node"],
        "lib": ["esnext"],
        "sourceMap": true
    },
    "ts-node": {
        "files": true
    }
}
